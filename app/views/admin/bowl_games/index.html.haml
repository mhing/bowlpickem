.container-fluid
  .row
    .col-xs-10.col-xs-offset-1
      .row
        .col-xs-12
          %h2
            Bowl Game Manager

      .row
        / .col-xs-6
        /   =form_tag import_game_matchups_admin_bowl_games_path, multipart: true, id: "upload-form" do
        /     .row
        /       .col-xs-12
        /         .col-xs-3
        /           .pull-left
        /             =fa_icon "upload", text: "Import Bowl Games"
        /         .col-xs-9
        /           .pull-left
        /             = file_field_tag :file
        /           .pull-right
        /             = submit_tag "Import", class: "btn btn-primary"
        .col-xs-12
          .col-xs-3
            =link_to "New Bowl Game", new_admin_bowl_game_path, class: "btn btn-primary"
          .col-xs-3
            =link_to "Import Bowl Games", "", class: "btn btn-primary"

      .row.fold-line
        .dark-line
        .light-line

      -if bowl_games.length > 0
        .row.view-header
          .col-xs-12.bowl-games
            .row
              .col-xs-2
                Name
              .col-xs-3
                Matchup
              .col-xs-2
                Date
              .col-xs-2
                Location
              .col-xs-1
                TV
              .col-xs-2
                Actions

        .row.fold-line
          .dark-line
          .light-line

        .row
          .col-xs-12.bowl-games
            -bowl_games.each do |bowl_game|
              = render :partial => "bowl_game", :locals => {:bowl_game => bowl_game}